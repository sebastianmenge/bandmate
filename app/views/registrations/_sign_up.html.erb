<% @user.bands.build %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div>
    <%= f.label ("Benutzername:") %>
    <%= f.text_field :username %></div>

    <div>
    <%= f.label("E-Mail:") %>      
    <%= f.email_field :email %></div>

    <div>
    <%= f.label ("Passwort:") %>
    <%= f.password_field :password %></div>

    <div>
        <%= f.label ("Passwort wiederholen:") %>
    <%= f.password_field :password_confirmation %></div>
    
    <div>
      <%= f.fields_for :bands do |band_form| %>
        <%= band_form.label :name ("Bandname:") %>
        <%= band_form.text_field :name %>
        
        <%= band_form.hidden_field :bgcolor, :value => '#898989' %>
        <%= band_form.hidden_field :maincolor, :value => '#ffffff' %>
      <% end %>
    </div>

    <div><%= f.submit "Registrieren" %></div>
  <% end %>


